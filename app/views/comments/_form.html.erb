<%= form_with model: [ @article, @article.comments.build ] do |form| %>
  <p>
    <%= form.label :commenter, 'Your name' %><br>
    <%= form.text_field :commenter %>
  </p>
  <p>
    <%= form.label :body, 'Your comment'%><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
